# Configurações de Produção para Railway
# Configure estas variáveis no painel da Railway

# MongoDB - Use a string de conexão do MongoDB Atlas ou Railway MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/traffic-ops?retryWrites=true&w=majority

# Meta App - Configurações da aplicação Meta
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret

# Telegram Bot - Token do bot (mantenha seguro!)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Sistema API URL - URL do sistema principal (será definida automaticamente pela Railway)
SYSTEM_API_URL=https://your-app-name.railway.app/api

# Usuários autorizados do Telegram (IDs separados por vírgula)
AUTHORIZED_USERS=5767285166

# Configurações de produção
NODE_ENV=production
NEXTAUTH_URL=https://your-app-name.railway.app
NEXTAUTH_SECRET=your-nextauth-secret-key

# Configurações de alertas
WEBHOOK_URL=https://your-webhook-url.com/webhook
LOW_BALANCE_THRESHOLD=5000

# Configurações do Google Sheets (se necessário)
GOOGLE_SHEETS_API_KEY=your_google_sheets_api_key
GOOGLE_SHEETS_SHEET_ID=your_google_sheet_id
